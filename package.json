{
    "name": "workspace-root",
    "description": "Workspace root",
    "version": "0.0.0",
    "author": "Workleap",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev-spa": "turbo run dev --filter=@samples/spa",
        "dev-netlify-cd": "turbo run dev --filter=@samples/netlify-cd",
        "dev-manifest": "turbo run dev --filter=@samples/manifest",
        "dev-docs": "retype start",
        "build-lib": "turbo run build --filter=@workleap/netlify-skew-protection",
        "build-samples": "turbo run build --filter=@samples/*",
        "build-spa": "turbo run build --filter=@samples/spa",
        "build-netlify-cd": "turbo run build --filter=@samples/netlify-cd",
        "build-manifest": "turbo run build --filter=@samples/manifest",
        "serve-spa": "turbo run serve-build --filter=@samples/spa",
        "serve-netlify-cd": "turbo run serve-build --filter=@samples/netlify-cd",
        "serve-manifest": "turbo run serve-build --filter=@samples/manifest",
        "deploy-spa": "pnpm run --sequential \"/^deploy-spa:.*/\"",
        "deploy-spa:build-sample": "turbo run build --filter=@samples/spa",
        "deploy-spa:deploy": "netlify deploy --prod --site eb01ac17-af8b-4057-828d-2b20476ac7b2 --filter=@samples/spa",
        "deploy-manifest": "pnpm run --sequential \"/^deploy-manifest:.*/\"",
        "deploy-manifest:build-sample": "turbo run build --filter=@samples/manifest",
        "deploy-manifest:deploy": "netlify deploy --prod --site e46d2f54-40f6-4d91-9817-92b7637f7b8e --filter=@samples/manifest",
        "lint": "turbo run eslint typecheck syncpack --continue",
        "eslint": "eslint . --ignore-pattern lib --ignore-pattern samples --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "test": "turbo run test --continue",
        "changeset": "changeset",
        "publish-pkg": "changeset publish",
        "publish-pr-pkg": "pkg-pr-new publish ./lib --packageManager=pnpm --pnpm",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist .turbo .rslib .netlify node_modules/.cache",
        "reset": "pnpm run --sequential \"/^reset:.*/\"",
        "reset:clean": "pnpm clean",
        "reset:delete-node-modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated -r --format list !eslint",
        "update-outdated-deps": "pnpm run --sequential \"/^update-outdated-deps:.*/\"",
        "update-outdated-deps:update-version": "pnpm update -r --latest !eslint",
        "update-outdated-deps:update-peers": "syncpack fix-mismatches"
    },
    "devDependencies": {
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "2.29.4",
        "@typescript-eslint/parser": "8.32.1",
        "@workleap/eslint-plugin": "3.4.2",
        "@workleap/typescript-configs": "3.0.4",
        "eslint": "8.57.1",
        "netlify-cli": "21.5.0",
        "pkg-pr-new": "0.0.50",
        "retypeapp": "3.10.1",
        "syncpack": "13.0.4",
        "turbo": "2.5.3",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=9"
    },
    "packageManager": "pnpm@10.19.0"
}

