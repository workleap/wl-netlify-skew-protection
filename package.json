{
    "name": "workspace-root",
    "version": "0.0.0",
    "author": "Workleap",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev-sample": "turbo run dev --filter=sample",
        "build-lib": "turbo run build --filter=@workleap/netlify-skew-protection",
        "build-sample": "turbo run build --filter=sample",
        "serve-sample": "turbo run serve-build --filter=sample",
        "deploy-sample": "netlify deploy --prod --site eb01ac17-af8b-4057-828d-2b20476ac7b2 --filter=sample",
        "lint": "turbo run eslint typecheck syncpack --continue",
        "eslint": "eslint . --ignore-pattern lib --ignore-pattern sample --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "changeset": "changeset",
        "publish-pkg": "changeset publish",
        "publish-pr-pkg": "pkg-pr-new publish ./lib --packageManager=pnpm --pnpm",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist .turbo .rslib .netlify node_modules/.cache",
        "reset": "pnpm run --sequential \"/^reset:.*/\"",
        "reset:clean": "pnpm clean",
        "reset:delete-node-modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated -r --format list !eslint",
        "update-outdated-deps": "pnpm update -r --latest !eslint"
    },
    "devDependencies": {
        "@changesets/cli": "2.28.1",
        "@typescript-eslint/parser": "8.29.0",
        "@workleap/eslint-plugin": "3.3.2",
        "@workleap/typescript-configs": "3.0.3",
        "eslint": "8.57.1",
        "netlify-cli": "20.0.3",
        "pkg-pr-new": "0.0.41",
        "syncpack": "13.0.3",
        "turbo": "2.5.0",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=9"
    },
    "packageManager": "pnpm@9.15.4"
}
